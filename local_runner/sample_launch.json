{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension Local Runner (Copy)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/local_runner/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["copy"],
            "env": {
                 "PYTHONPATH": "${workspaceFolder}"
            }
        },
